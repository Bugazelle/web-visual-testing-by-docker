#!/bin/bash
docker build \
    --build-arg CHROME_VERSION=$CHROME_VERSION \
    --build-arg CHROMIUM_VERSION=$CHROMIUM_VERSION \
    --build-arg CHROMEDRIV_VERSION=$CHROMEDRIV_VERSION \
    --build-arg FIREFOX_VERSION=$FIREFOX_VERSION \
    --build-arg GECKO_VERSION=$GECKO_VERSION \
    --build-arg PHANTOMJS_VERSION=$PHANTOMJS_VERSION \
    --build-arg BACKSTOPJS_VERSION=$BACKSTOPJS_VERSION \
    --build-arg GEMINI_VERSION=$GEMINI_VERSION \
    --build-arg HERMIONE_VERSION=$HERMIONE_VERSION \
    --build-arg HTML_REPORTER_VERSION=$HTML_REPORTER_VERSION \
    --build-arg HTML_REPORTER_LEGACY_VERSION=$HTML_REPORTER_LEGACY_VERSION \
    --build-arg JSON_REPORTER_VERSION=$JSON_REPORTER_VERSION \
    --build-arg LOOKS_SAME_VERSION=$LOOKS_SAME_VERSION \
    --build-arg SELENIUMSTANDALONE_VERSION=$SELENIUMSTANDALONE_VERSION \
    --build-arg CHAI_VERSION=$CHAI_VERSION \
    --build-arg NODEJS_VERSION=$NODEJS_VERSION \
    -t $IMAGE_NAME .
